<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <div class="bg-white rounded-lg p-8 shadow-md">
                    <h1 class="text-3xl font-bold mb-4">Welcome to the Baby Sleep Application</h1>
                    <p class="text-lg mb-8">Please log in to access the full features of the application.</p>
                    <a href="/login" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Log In
                    </a>
                </div>
            </NotAuthorized>
            <Authorizing>
                <p>Authentication in progress...</p>
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>
</Router>
